<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PurchaseActivity">

    <Button
        android:id="@+id/btnBack"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/arrowback" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/btnBack"
        android:orientation="vertical"
        android:padding="30dp">

        <TextView
            android:id="@+id/textViewSelect"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="30dp"
            android:text="선택한 목록"
            android:textSize="40dp" />

        <TextView
            android:id="@+id/textViewBody"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="안녕하세요 SKT 멤버쉽 7000 point 판매 중입니다.\n..."
            android:textSize="20dp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/editTextPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#0000ff"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:text="금액" />

            <EditText
                android:id="@+id/editTextExpirationDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#0000ff"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:text="유효기간" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnPurchase"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="30dp"
                android:layout_weight="1"
                android:text="구매" />

            <ImageView
                android:id="@+id/imageViewBarcode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/barcode"
                android:visibility="gone"/>



        </LinearLayout>


    </LinearLayout>
</RelativeLayout>